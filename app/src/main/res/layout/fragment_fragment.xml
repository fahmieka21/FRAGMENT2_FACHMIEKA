<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentFirs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertikal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertikal_margin">

    <TextView
        android:id="@+id/TvFirstFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Klik_tombol_ini"
        tools:text="@string/Klik_tombol_ini" />

    <Button
        android:id="@+id/BtnSwitchOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TvFirstFragment"
        android:text="@string/tampil_tombol" />
</RelativeLayout>